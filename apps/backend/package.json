{
  "name": "@analytodon/backend",
  "version": "2.0.0",
  "license": "GPL-3.0-only",
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "dev": "pnpm run start:dev",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "prettier:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "prettier:write": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint --max-warnings=0",
    "test": "pnpm run test:unit && pnpm run test:e2e",
    "test:unit": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e:start-docker": "docker compose -f test/e2e/docker-compose.yml up -d",
    "test:e2e:stop-docker": "docker compose -f test/e2e/docker-compose.yml down",
    "test:e2e:run": "jest --config ./test/e2e/jest-e2e.json --runInBand",
    "test:e2e:setup": "npm run test:e2e:start-docker && echo 'Waiting for DB...' && sleep 5",
    "test:e2e": "npm run test:e2e:setup && npm run test:e2e:run && npm run test:e2e:stop-docker"
  },
  "dependencies": {
    "@mikro-orm/core": "^6.4.15",
    "@mikro-orm/mongodb": "^6.4.15",
    "@mikro-orm/nestjs": "^6.1.1",
    "@nestjs-modules/mailer": "^2.0.2",
    "@nestjs/common": "^11.1.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.1",
    "@nestjs/swagger": "^11.2.0",
    "bcrypt": "^6.0.0",
    "bson": "^6.10.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "csv-stringify": "^6.5.2",
    "date-fns": "^4.1.0",
    "megalodon": "^10.1.1",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "swagger-ui-express": "^5.0.1",
    "timezone-support": "^3.1.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "@nestjs/cli": "^11.0.7",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/testing": "^11.1.1",
    "@types/express": "^5.0.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.19",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^6.0.3",
    "eslint": "9.27.0",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.1",
    "ts-jest": "^29.3.4",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "../test/unit/jest-unit.setup.ts"
    ]
  }
}
