{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      { "include": "mail/templates/**/*.hbs", "watchAssets": true },
      { "include": "mail/templates/**/*.txt", "watchAssets": true },
      { "include": "mail/templates/assets/**/*", "watchAssets": true },
      { "include": "i18n/**/*.json", "watchAssets": true }
    ]
  }
}
