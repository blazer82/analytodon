# This is an example of the .env file for the backend application.

# JWT Configuration
JWT_SECRET=yourHighlySecureAndLongSecretKeyGoesHere
JWT_EXPIRES_IN=1h

# MongoDB Connection
DB_CLIENT_URL=mongodb://root:password@localhost:27017/analytodon_dev?authSource=admin

# Mastodon Configuration
MASTODON_APP_NAME=Analytodon

# URL Configuration
FRONTEND_URL=http://localhost:5173
MARKETING_URL=https://www.analytodon.com

# Encryption Key (MUST be a 64-character hex string - 32 bytes)
ENCRYPTION_KEY=your_64_character_hex_encryption_key_goes_here

# Email Configuration
EMAIL_HOST=your-smtp-host.example.com
EMAIL_PORT=465
EMAIL_USER=your-smtp-username
EMAIL_PASS=your-smtp-password
EMAIL_SECURE=true # Use 'true' for SSL/TLS (typically port 465), 'false' for STARTTLS (port 587) or no encryption
EMAIL_FROM_NAME="Analytodon"
EMAIL_FROM_ADDRESS=info@analytodon.com
